{% extends 'base.html.twig' %}

{% block title %}Mission Overview{% endblock %}

{% block body %}

    <h3 class="mb-5">There are {{ missions|length }} Missions reported</h3>

    {% for row in missions|batch(4) %}
        <div class="row">
            {% for mission in row %}
                <div class="col-12 col-md-6 col-lg-3 mb-4">
                    <div class="card border shadow lift text-center">
                        <div class="card-body">
                            <div class="card-title">
                                <h4 class="font-weight-light">
                                    {{ mission }}
                                </h4>
                            </div>
                                <div class="d-grid">
                                    <a href="{{ path('mission', { id: mission.id }) }}" class="btn btn-outline-secondary btn-sm"  role="button">View</a>
                                </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}